extends admin.pug

block variables
  - title = "Add a New Project"

block content
  h1 #{title}
  +form("POST", "", [
    {
      label: "Name",
      placeholder: "Sibling Subordinator",
      name: "name",
      required: true,
      autofocus: true
    },
    {
      label: "ID",
      placeholder: "sibling-subordinator (unique)",
      name: "id",
      required: true
    },
    {
      label: "Type",
      placeholder: "coding-project",
      name: "type",
      required: true
    },
    {
      label: "Banner Image",
      placeholder: "/projects/sibling-subordinator/banner.jpg (optional)",
      name: "image"
    },
    {
      label: "Summary",
      type: "textarea",
      placeholder: "A project to hold your puny siblings in thrall and bid them do your nefarious will.",
      name: "summary",
      required: true
    },
    {
      label: "Link to Code",
      type: "url",
      placeholder: "https://github.com/benjaminbhollon/sibling-subordinator (optional)",
      name: "code"
    },
    {
      label: "Link to Final Version",
      name: "link",
      placeholder: "/projects/sibling-subordinator/"
    }
  ])
