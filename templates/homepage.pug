block append head
  style.
    /* Generic Styles */
    body {
      padding-top: 0;
    }

    .fullpage {
      min-height: 100vh;
      position: relative
    }

    .fullpage__center, .fullpage__center--fill {
      position: absolute;
      top: 50vh;
      left: 50vw;
      width: 100%;
      max-width: 600px;
      padding: 1em;
      transform: translate(-50%, -50%);
    }

    .fullpage__center--fill {
      color: #fff;
      background-color: rgba(0,0,0,0.55);
    }

    /*Specific Styles */
    #occupations-typewriter, #occupations-noscript {
      font-family: courier
    }

    #occupations-typewriter::after {
      content: "_";
      padding-left:0px;
      animation: cursor-blink 800ms infinite;
      display: inline-block;
      width: 0;
    }

    @keyframes cursor-blink {
      from { opacity: 1; }
      to { opacity: 0; }
    }
    
    .scroll-down {
      border-right: 0.1em solid #000;
      border-bottom: 0.1em solid #000;
      width: 2em;
      height: 2em;
      display: inline-block;
      transform: rotate(45deg);
      color: transparent;
    }

    #panel-3 {
      background-color: midnightblue;
    }

    #bookshelf {
      position: absolute;
      left: 50vw;
      bottom: 3vmin;
      width: 90vmin;
      height: 90vmin;
      grid-gap:0.5em;
      border: 0.35em solid #000;
      transform: translateX(-50%);
    }

    .shelf {
      height: 30vmin;
      border: 0.35em solid #000;
      position: relative;
    }

    .book {
      position: absolute;
      background-color: var(--background-color);
      bottom: 0;
      left: calc(var(--no) * 5vmin);
      transform-origin: 2.5vmin 50%;
      transform: rotate(-90deg);
      text-decoration: none;
      transition: transform 0.4s ease, filter 0.4s ease;
    }

    .book span {
      color: #000;
      display: block;
      width: var(--height);
      height: 5vmin;
      line-height: 5vmin;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      padding: 0 0.5em;
      transform: rotate(180deg);
    }

    .book:hover {
      transform: scale(1.05) rotate(-90deg);
      filter: hue-rotate(20deg);
      z-index: 2;
    }

    #gr_custom_widget_1610423899 {
      display: none;
    }

    #panel-4 {
      background-color: bisque;
      background-image: url("/lib/images/homepage/6.jpg");
      background-size: cover;
      background-position: top;
    }

    #panel-5 {
      background-color: maroon;
      background-image: url("/lib/images/homepage/8.jpg");
      background-size: cover;
      background-position: center;
    }

    /* Code editing */
    #code__editor, .code__result {
      width: 100%;
      height: 50vh;
      position: absolute;
      margin: 0;
    }

    #code__editor {
      left: 0;
      top: 0;
      word-wrap: break-word;
      overflow: auto;
      text-align: left;
      padding: 0.5em;
      background-color: #555;
      color: #fff;
    }

    .code__result {
      border: none;
      bottom: 0;
    }
    
    #code__skip {
      display: inline-block;
      background-color: orange;
      position: absolute;
      bottom: 0.5em;
      right: 0.5em;
      font-size: 1.2em;
      padding: 0.25em 0.75em;
      border-radius: 0.25em;
      cursor: pointer;
    }
    
    @media (orientation: landscape) {
      #code__editor, .code__result {
        width: 50%;
        height: 100vh;
        position: absolute;
        top: 0;
      }

      .code__result {
        right: 0;
        border: none;
      }
    }
  script(async,src="https://buttons.github.io/buttons.js")
