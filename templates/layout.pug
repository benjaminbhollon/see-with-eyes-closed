doctype html
html(lang='en-us' data-theme=cookies.theme)
  head
    block head
      //- metaImage = "https://seewitheyesclosed.com/assets/images/homepage/2.jpg"
      block variables
      block resources
        link(rel="stylesheet" href="/assets/css/global.css")
        script(src="/assets/js/global.js" async)
      block meta
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="description" content=metaDescription)
        meta(property="og:title" content=title + " | See With Eyes Closed")
        meta(property="og:type" content="website")
        meta(property="og:description" content=metaDescription)
        //-meta(property="og:image" content=metaImage)
      block title
        title #{title} | See With Eyes Closed
      link(rel="shortcut icon" type="image/x-icon" href="/assets/images/favicon.ico")
      noscript
        style.
          .--hide-noscript {
            display: none;
          }
  body
    block mixins
      include mixins/form.pug
      include mixins/verse.pug
    main
      //-p.no-dropcap: a.sr-only(href="#content__beginning") Skip to Content
      header
        block header
          h1= title || hardTitle
      block navbar
        nav.main-nav
          a(href="/") Home
          a(href="/blog/") Blog
          a(href="/projects/") Projects
          a(href="/writing/") Writing
      block content
        if (content)
          != md.render(content)
      block footer
        footer
          +verse
          p
            a(href="/contact/") Contact Me
            |  | 
            a(href="/policies/privacy/") Privacy Policy
            |  | 
            a(href="/policies/cookies/") Cookie Policy
            |  | 
            a(href="/policies/terms/") Terms of Use
