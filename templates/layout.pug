doctype html
html(lang='en-us' data-theme=(cookies.theme || 'light') data-font-family=(cookies.fontFamily || 'serif'))
  head
    block head
      //- metaImage = "https://seewitheyesclosed.com/assets/images/homepage/2.jpg"
      block variables
      block meta
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="description" content=metaDescription)
        meta(property="og:title" content=(hardTitle || title))
        meta(property="og:type" content=(metaType || 'website'))
        meta(property="og:description" content=metaDescription)
        //-meta(property="og:image" content=metaImage)
      block resources
        link(rel="stylesheet" href="/assets/css/global.css")
        script(src="/assets/js/global.js" async)
      block title
        title= hardTitle || (title + " | See With Eyes Closed")
      link(rel="shortcut icon" type="image/x-icon" href="/assets/images/favicon.ico")
      noscript
        style.
          .--hide-noscript {
            display: none;
          }
  body
    block mixins
      include mixins/form.pug
      include mixins/verse.pug
      include mixins/settings.pug
    #column
      header
        block header
          h1= title || hardTitle
      nav#main-nav
        a.tab-only(href="#content") Skip Navigation
        block navbar
          a(href="/") Home
          a(href="/articles/") Articles
          //-a(href="/subscribe/") Subscribe
          a(href="/projects/") Projects
          a(href="/writing/") Writing
          //-a(href="https://benjaminhollon.com" target="_blank" rel="noopener") More
      main#content(tabindex="-1")
        block content
          if (content)
            != md.render(content)
          else
            p This page does not seem to have any content. Check back later!
      block footer
        footer
          p
            a(href="/social/") Social
            |  | 
            a(href="/feed/") RSS
            |  | 
            a(href="https://digest.seewitheyesclosed.com" target="_blank" rel="noopener") Digest
            |  | 
            a(href="https://github.com/benjaminhollon/see-with-eyes-closed" target="_blank" rel="noopener") Code
            
          +verse
          
          p
            a(href="/contact/") Contact Me
            |  | 
            a(href="/policies/privacy/") Privacy Policy
            |  | 
            a(href="/policies/cookies/") Cookie Policy
            |  | 
            a(href="/policies/terms/") Terms of Use
    +displaySettings
